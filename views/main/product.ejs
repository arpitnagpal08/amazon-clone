<% layout('layout') -%>


    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-4 mr-auto ml-auto">
                <div class="card mb-6">
                    <div class="row">
                        <div class="col-md-6">
                            <img class="card-img-top" src="<%= product.image %>" alt="<%= product.name %>">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= product.name %>
                                </h5>
                                <p class="card-text">
                                    {{ <%= product.price %> | currency: "Rs. " }}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>