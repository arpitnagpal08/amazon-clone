<% layout('layout') -%>


    <div class="container">
        <div class="row">
            <div class="col-md-12 mt-4">
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-6">
                            <img class="card-img-top" src="<%= product.image %>" alt="<%= product.name %>">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <h5 class="card-title"><%= product.name %></h5>
                                <p class="card-text text-muted">
                                    {{ <%= product.price %> | currency: "Rs. " }}
                                </p>
                            </div>
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
    </div>