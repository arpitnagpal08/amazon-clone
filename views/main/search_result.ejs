<% layout("layout") -%>

<% if(data.length === 0) { %>
    <div class="container mt-4 mr-auto ml-auto">
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-muted">Search not found</h3>
            </div>
        </div>
    </div>
<% } else { %>
    <div class="container-fluid">
            <h3 class="text-muted">Result for: "<%= query %>"</h3>
            <div class="row">
                <% for(key in data) { %>
                    <div class="col-md-3 mt-4 ml-auto mr-auto">
                        <div class="card mb-2">
                            <div class="row">
                                <div class="col-md-6">
                                    <img class="card-img-top" src="<%= data[key]._source.image %>" alt="<%= data[key]._source.name %>">
                                </div>
                                <div class="col-md-6">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= data[key]._source.name %>
                                        </h5>
                                        <p class="card-text">
                                            {{ <%= data[key]._source.price %> | currency: "Rs. " }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

<% } %>